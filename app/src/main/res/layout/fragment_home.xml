<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="@dimen/_130"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="@dimen/_10"
        android:layout_marginRight="@dimen/_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10"
            android:layout_marginRight="@dimen/_10"
            android:layout_marginTop="@dimen/_10"
            android:id="@+id/ll_header1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10"
                android:layout_marginEnd="@dimen/_10">
                <ImageView
                    android:layout_width="@dimen/_30"
                    android:layout_height="@dimen/_50"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/blue_indian_rupee"
                    android:layout_marginLeft="@dimen/_20"
                    android:id="@+id/blue_rupee"
                    android:layout_marginStart="@dimen/_20" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monthly_expence"
                    tools:text="4000"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/_22s"
                    android:textStyle="bold"
                    android:fontFamily="@font/arvo"
                    android:layout_toRightOf="@id/blue_rupee"
                    android:layout_toEndOf="@id/blue_rupee" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/INR"
                    android:visibility="gone"
                    android:layout_toLeftOf="@id/budget_amount"
                    android:src="@mipmap/rupee_invoice"
                    android:layout_toStartOf="@id/budget_amount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4000"
                    android:textSize="@dimen/_18s"
                    android:layout_centerVertical="true"
                    android:id="@+id/budget_amount"
                    android:fontFamily="@font/arvo"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_10"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_10"
                android:progressTint="@color/colorPrimaryDark"
                android:layout_height="@dimen/_10"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_5"
            android:layout_marginLeft="@dimen/_10"
            android:layout_marginRight="@dimen/_10">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2"
                android:layout_marginLeft="@dimen/_20"
                android:layout_marginRight="@dimen/_20"
                android:background="@color/lightGray"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_budget"
                android:id="@+id/setBudget"
                android:textSize="@dimen/_12s"
                android:fontFamily="@font/arvo"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/_20"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expences"
                android:textSize="@dimen/_12s"
                android:fontFamily="@font/arvo"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/_20"
                android:layout_marginEnd="@dimen/_20" />
        </RelativeLayout>
    </RelativeLayout>
        <View
        android:layout_width="@dimen/_30"
        android:layout_height="@dimen/_5"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:background="@drawable/rectangle"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_recycler"
                    android:layout_marginLeft="@dimen/_10"
                    android:layout_marginRight="@dimen/_10"
                    android:layout_marginBottom="@dimen/_10"
                    android:background="@drawable/rectangle">

                </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>