<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_10">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/_10"
       android:layout_marginRight="@dimen/_10">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="@string/travel"
           android:id="@+id/item_category"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           tools:text="04 Dec 2018"
           android:id="@+id/time"/>
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginRight="@dimen/_10"
        android:layout_marginBottom="@dimen/_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rs. 500"
            android:id="@+id/item_amount"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_amount"
            android:id="@+id/item_note"
            android:text="No Note!"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_30"
            android:layout_height="@dimen/_30"
            android:id="@+id/icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="@dimen/_1"
        android:background="@color/primaryDarkBlue"
        android:layout_marginLeft="@dimen/_10"
        android:layout_marginRight="@dimen/_10"></View>


</LinearLayout>