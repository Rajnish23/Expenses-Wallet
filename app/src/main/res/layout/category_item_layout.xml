<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10"
    android:padding="@dimen/_5"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_40"
        android:layout_height="@dimen/_40"
        android:id="@+id/item_color"
        tools:src="@color/primaryJamun"
        android:layout_marginLeft="@dimen/_10"/>
    <TextView
        style="@style/categoryTextView"
        android:id="@+id/item_name"
        tools:text="@string/travel"/>
</LinearLayout>